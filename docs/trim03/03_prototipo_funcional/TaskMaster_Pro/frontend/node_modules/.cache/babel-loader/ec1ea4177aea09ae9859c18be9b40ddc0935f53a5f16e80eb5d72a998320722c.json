{"ast":null,"code":"import \"../assets/css/EditarPerfil.css\";\nexport default {\n  data() {\n    return {\n      form: {\n        nombre: 'Johan Felipe',\n        apellido: 'Garcia Salazar',\n        email: 'fgfernan2508@gmail.com',\n        password: '',\n        celular: '',\n        tipoDocumento: '',\n        numeroDocumento: '',\n        profilePic: '' // Aquí se almacena la URL de la foto seleccionada\n      }\n    };\n  },\n  methods: {\n    goBack() {\n      this.$router.go(-1); // Navegar hacia atrás\n    },\n    handleSubmit(event) {\n      event.preventDefault();\n      console.log('Formulario enviado', this.form);\n    },\n    handleFileChange(event) {\n      const file = event.target.files[0];\n      if (file) {\n        const reader = new FileReader();\n        reader.onload = e => {\n          this.form.profilePic = e.target.result;\n        };\n        reader.readAsDataURL(file);\n      }\n    },\n    confirmarCancelacion() {\n      console.log(\"Cuenta cancelada\");\n    }\n  }\n};","map":{"version":3,"names":["data","form","nombre","apellido","email","password","celular","tipoDocumento","numeroDocumento","profilePic","methods","goBack","$router","go","handleSubmit","event","preventDefault","console","log","handleFileChange","file","target","files","reader","FileReader","onload","e","result","readAsDataURL","confirmarCancelacion"],"sources":["C:\\xampp\\htdocs\\TaskMasterPro\\trim03\\04_prototipo_funcional\\TaskMaster_Pro\\frontend\\src\\components\\EditarPerfil.vue"],"sourcesContent":["<template>\r\n  <div class=\"bg-custom\">\r\n    <div class=\"container-fluid\">\r\n      <div class=\"row no-gutters header-custom\">\r\n        <div class=\"col-12 d-flex align-items-center justify-content-between p-3\">\r\n          <button class=\"btn btn-primary buton-regresar\" @click=\"goBack\">\r\n            <svg xmlns=\"http://www.w3.org/2000/svg\" width=\"16\" height=\"16\" fill=\"currentColor\" class=\"bi bi-caret-left-fill\" viewBox=\"0 0 16 16\">\r\n  