uario no autenticado') {\r\n            console.log(serverErrors.mensaje);\r\n            alert(`${serverErrors.mensaje}, debes loguearte para acceder a las funciones de esta ruta.`);\r\n            this.$router.push('/iniciar-sesion');\r\n          } else if (serverErrors.mensaje === 'No tienes permisos para realizar esta acción.') {\r\n            console.log(serverErrors.mensaje);\r\n            this.$router.push('/error403');\r\n          } else {\r\n            console.log(serverErrors);\r\n            this.$router.push('/error500');\r\n          }\r\n        }\r\n      }\r\n    }\r\n  },\r\n\r\n  mounted() {\r\n    document.title = \"Crear Rol | TaskMaster Pro\";\r\n  },\r\n};\r\n</script>\r\n<style scoped>\r\n@import \"@/../../assets/css/style.css\";\r\n</style>"],"mappings":";AA+DA,OAAOA,GAAE,MAAO,gBAAgB;AAChC,SAASC,YAAW,QAAS,iBAAiB;AAC9C,SAASC,QAAQ,EAAEC,OAAM,QAAS,uBAAuB;AACzD,SAASC,SAAQ,QAAS,0BAA0B;AACpD,SAASC,SAAQ,QAAS,0BAA0B;AACpD,eAAe;EACbC,KAAKA,CAAA,EAAG;IACN,OAAO;MAAEC,EAAE,EAAEN,YAAY,CAAC;IAAE,CAAC;EAC/B,CAAC;EACDO,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,MAAM,EAAE,EAAE;MACVC,WAAW,EAAE,EAAE;MACfC,aAAa,EAAE,CAAC;IAClB,CAAC;EACH,CAAC;EACDC,WAAWA,CAAA,EAAG;IACZ,OAAO;MACLH,MAAM,EAAE;QACNP,QAAQ,EAAEC,OAAO,CAACU,WAAW,CAAC,0BAA0B,EAAEX,QAAQ,CAAC;QACnEE,SAAS,EAAED,OAAO,CAACU,WAAW,CAAC,sBAAsB,EAAET,SAAS,CAAC,EAAE,CAAC,CAAC;QACrEU,MAAM,EAAEX,OAAO,CAACU,WAAW,CACzB,2BAA2B,EAC1BE,KAAK,IAAK,gCAAgC,CAACC,IAAI,CAACD,KAAK,CACxD;MACF,CAAC;MACDL,WAAW,EAAE;QACXR,QAAQ,EAAEC,OAAO,CAACU,WAAW,CAAC,+BAA+B,EAAEX,QAAQ,CAAC;QACxEG,SAAS,EAAEF,OAAO,CAACU,WAAW,CAAC,sBAAsB,EAAER,SAAS,CAAC,EAAE,CAAC,CAAC;QACrED,SAAS,EAAED,OAAO,CAACU,WAAW,CAAC,wBAAwB,EAAET,SAAS,CAAC,IAAI,CAAC;MAC1E;IACF;EACF,CAAC;EACDa,OAAO,EAAE;IACP;IACAC,MAAMA,CAAA,EAAG;MACP,IAAI,CAACC,OAAO,CAACC,EAAE,CAAC,CAAC,CAAC,CAAC;IACrB,CAAC;IAED,MAAMC,YAAYA,CAAA,EAAG;MACnB;MACA,MAAMC,OAAM,GAAI,MAAM,IAAI,CAACf,EAAE,CAACgB,SAAS,CAAC,CAAC;MACzC,IAAI,CAACD,OAAO,EAAE;MACd,IAAI;QACF,MAAME,QAAO,GAAI,MAAMxB,GAAG,CAACyB,IAAI,CAAC,OAAO,EAAE;